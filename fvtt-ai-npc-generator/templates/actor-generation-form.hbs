<form autocomplete="off">
    <p class="notes">{{localize "FVTT_AI_NPC_GENERATOR.Dialog.Instructions"}}</p>

    <div class="form-group">
        <label for="monsterName">{{localize "FVTT_AI_NPC_GENERATOR.Dialog.MonsterName.Label"}}:</label>
        <input type="text" id="monsterName" name="monsterName" value="{{defaultMonsterData.name}}"/>
    </div>

    <div class="form-group">
        <label for="cr">{{localize "FVTT_AI_NPC_GENERATOR.Dialog.CR.Label"}}:</label>
        <input type="number" id="cr" name="cr" value="{{defaultMonsterData.cr}}" min="0" step="0.125"/>
    </div>

    <div class="form-group">
        <label for="monsterType">{{localize "FVTT_AI_NPC_GENERATOR.Dialog.MonsterType.Label"}}:</label>
        <input type="text" id="monsterType" name="monsterType" value="{{defaultMonsterData.type}}"/>
    </div>

    <div class="form-group">
        <label for="monsterSubtype">{{localize "FVTT_AI_NPC_GENERATOR.Dialog.MonsterSubtype.Label"}}:</label>
        <input type="text" id="monsterSubtype" name="monsterSubtype" value="{{defaultMonsterData.subtype}}"/>
    </div>

    <div class="form-group">
        <label for="alignment">{{localize "FVTT_AI_NPC_GENERATOR.Dialog.Alignment.Label"}}:</label>
        <input type="text" id="alignment" name="alignment" value="{{defaultMonsterData.alignment}}"/>
    </div>

    <div class="form-group">
        <label for="description">{{localize "FVTT_AI_NPC_GENERATOR.Dialog.Description.Label"}}:</label>
        <textarea id="description" name="description" rows="5">{{defaultMonsterData.description}}</textarea>
    </div>
    
    <div class="form-group">
        <label for="aiProvider">{{localize "FVTT_AI_NPC_GENERATOR.Dialog.AIProvider.Label"}}:</label>
        <select name="aiProvider" id="aiProvider">
            {{#each aiProviders as |label key|}}
            <option value="{{key}}" {{#if (eq key ../chosenProvider)}}selected{{/if}}>{{localize label}}</option>
            {{/each}}
        </select>
    </div>

    <footer class="sheet-footer flexrow">
        <button type="button" name="generate">
            <i class="fas fa-brain"></i> {{localize "FVTT_AI_NPC_GENERATOR.Dialog.GenerateButton"}}
        </button>
        <button type="button" name="cancel" data-action="close">
            <i class="fas fa-times"></i> {{localize "FVTT_AI_NPC_GENERATOR.Dialog.CancelButton"}}
        </button>
    </footer>
</form>
